<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context="edu.csi5230.yogitha.tttbutton.MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="1dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Player X's Turn"
        android:background="@color/colorAccent"
        android:layout_weight="1"
        android:id="@+id/labelGame"/>


    <LinearLayout android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_weight="10"
        android:weightSum="3">


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#4da64d"
        android:layout_weight="1"
        android:weightSum="3">

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/firstBtn"
        app:index="1"/>

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/SecondBtn"
        app:index="2"/>


    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/ThirdBtn"
        app:index="3"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#4da64d"
        android:layout_weight="1"
        android:weightSum="3">

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/FourthBtn"
        app:index="4"/>

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/FifthBtn"
        app:index="5"/>

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/SixthBtn"
        app:index="6"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#4da64d"
        android:layout_weight="1"
        android:weightSum="3">

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/SeventhBtn"
        app:index="7"/>

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/EightthBtn"
        app:index="8"/>

    <edu.csi5230.yogitha.tttbutton.tttButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/NinethBtn"
        app:index="9"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>